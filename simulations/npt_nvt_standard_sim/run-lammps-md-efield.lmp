# Initialize simulation
units           real
atom_style      charge

# Read the restart file from the NVT simulation
read_restart    restart.NVT

# Apply the ReaxFF potential
pair_style	reaxff NULL checkqeq yes
pair_coeff	* * ffield.reax Ce O

# Neighbor settings
neighbor        2 bin
neigh_modify    every 10 delay 0 check no

#Apply electric field: Syntax: fix ID group-ID efield Ex Ey Ez
fix 1 all efield 0.0 0.0 0.001

# add charge equalibrium
fix             1 all qeq/reaxff 1 0.0 10.0 1.0e-6 reaxff

# Output settings
timestep        1.0
thermo          1000
thermo_style    custom step temp press lx ly lz

dump            2 all custom 1000 dump_md_efield.lammpstrj id type x y z vx vy vz q


